{% extends ns_admin.base_template %}
{% block page_header_title %}{{'simpleuser.change_password.title'|trans}}{% endblock %}
{% block page_header_subtitle %}{% endblock %}
{% block content %}
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form class="form form-horizontal" action="{{ path('change_password') }}" method="post">
                        <h4 class="text-white">{{'simpleuser.change_password.title'|trans}}</h4>
                        <p>{{'simpleuser.change_password.subtitle'|trans}}</p>
                        <div class="form-group m-b-20">
                            {{ form_label(form.password.first, null, {'label_attr':{'class':'sr-only'}}) }}
                            {{ form_widget(form.password.first, {'attr':{'class':'form-control input-lg', 'placeholder':'New Password', 'autocomplete':'off'}}) }}
                        </div>
                        <div class="form-group m-b-20">
                            {{ form_label(form.password.second, null, {'label_attr':{'class':'sr-only'}}) }}
                            {{ form_widget(form.password.second, {'attr':{'class':'form-control input-lg', 'placeholder':'Confirm New Password', 'autocomplete':'off'}}) }}
                        </div>
                        {{ form_rest(form) }}
                        <div class="login-buttons">
                            <button type="submit" class="btn btn-success btn-block btn-lg">{{'simpleuser.change_password.button'|trans}}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
