{% extends ns_simple_user.templates.reset_password %}
{% block login_form %}
    <form action="{% block check_url %}{{ url('reset_password', {'token':token}) }}{% endblock %}" method="POST" class="margin-bottom-0">
        <h4 class="text-white">{{'simpleuser.reset_password.title'|trans}}</h4>
        <p>{{'simpleuser.reset_password.subtitle'|trans}}</p>
        <div class="form-group m-b-20">
            {{ form_label(form.password.first, null, {'label_attr':{'class':'sr-only'}}) }}
            {{ form_widget(form.password.first, {'attr':{'class':'form-control input-lg', 'placeholder':'simpleuser.form.new_password'|trans, 'autocomplete':'off'}}) }}
        </div>
        <div class="form-group m-b-20">
            {{ form_label(form.password.second, null, {'label_attr':{'class':'sr-only'}}) }}
            {{ form_widget(form.password.second, {'attr':{'class':'form-control input-lg', 'placeholder':'simpleuser.form.confirm_new_password'|trans, 'autocomplete':'off'}}) }}
        </div>
        {{ form_rest(form) }}
        <div class="login-buttons">
            <button type="submit" class="btn btn-success btn-block btn-lg">{{'simpleuser.reset_password.button'|trans}}</button>
        </div>
    </form>
{% endblock %}
